<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#AAAAAA" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="3dp"
                android:right="10dp"
                android:bottom="3dp" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="#DDDDDD" />
            <stroke
                android:width="1dp"
                android:color="#AAAAAA" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="3dp"
                android:right="10dp"
                android:bottom="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="3dp"
                android:right="10dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>